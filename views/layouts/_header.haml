%header#header.header{role: "banner", data: {offset_top: '50'}}
  .ctn
    .header_inner
      .grid
        .grid-i.__desktop-grid-1-4.__tablet-grid-1-6.hidden-phone
        .grid-i.__desktop-grid-2-4.__tablet-grid-4-6.__phone-grid-1-1
          .tx.__center
            %a{href: "/"}
              %img{src: "/assets/images/logo.svg", class: "header_logo hidden-phone", width: "328", height: "66", alt: "Blog Fiesta"}
              %img{src: "/assets/images/logo-phone.svg", class: "header_logo visible-phone", width: "88", height: "46", alt: "Blog Fiesta"}
        .grid-i.__desktop-grid-1-4.__tablet-grid-1-6
          = haml '/views/common/_user_logout'.to_sym
          -#= haml '/views/common/_user_login'.to_sym

%nav#navigation.navigation{role: "navigation"}
  .ctn.p-r
    .grid-i.__desktop-grid-1-6.__tablet-grid-1-3.__phone-grid-1-8
      .location
        .hidden-phone
          %a{href: "#", class: "location_a"}
            Санкт-Петербург&nbsp;
            %span &darr;
        .visible-phone
          %a{href: "#", class: "location_a"}
            СПб&nbsp;
            %span &darr;
        %ul.menu_dropdown.__location
          %li.menu_dropdown_i
            %a.menu_dropdown_i_a{href: "#"} Москва
          %li.menu_dropdown_i
            %a.menu_dropdown_i_a{href: "#"} Финляндия
    .grid-i.__desktop-grid-2-3.__tablet-grid-1-3.__phone-grid-3-4.tx.__center
      %a{href: "#", class: "menu-toggle hidden-desktop"}
        %i.fa.fa-bars
      %ul.menu
        %li.menu_i
          %a{href: "/news", class: "menu_i_a __news"} Новости
        %li.menu_i
          %a{href: "/places", class: "menu_i_a __places"} Места
        %li.menu_i
          %a{href: "/events", class: "menu_i_a __events"} События
        %li.menu_i
          %a{href: "/live", class: "menu_i_a __live"} Live
        %li.menu_i
          %a{href: "/landmark", class: "menu_i_a __landmark"} Достопримечательности
    .grid-i.__desktop-grid-1-6.__tablet-grid-1-3.__phone-grid-1-8.tx.__right
      %form.search{action: "/search"}
        .visible-phone
          %input{type: "text", class: "search_input", autofocus: "autofocus"}
          %a{href: "#", class: "search_toggle"}
            %i.ico.__16.__search
        .hidden-phone
          %input{type: "text", class: "search_input", placeholder: "Поиск"}
          %input{type: "submit", class: "search_button", value: ""}